{
	"name": "nova",
	"version": "0.0.1",
	"description": "Nova, the API server for Nexirift.",
	"author": "Nexirift",
	"license": "AGPL-3.0-only",
	"main": "src/server.ts",
	"scripts": {
		"dev": "NODE_ENV=development bun --watch src/server.ts",
		"start": "bun src/server.ts",
		"switch-registry": "chmod +x ./utility-scripts/switch-registry.sh && ./utility-scripts/switch-registry.sh",
		"db:generate": "cd node_modules/@nexirift/db && bun db:generate",
		"db:migrate": "set -a && source .env && cd node_modules/@nexirift/db && bun db:migrate",
		"db:studio": "set -a && source .env && cd node_modules/@nexirift/db && bun db:studio",
		"db:all": "set -a && source .env && cd node_modules/@nexirift/db && bun db:all",
		"db:start": "set -a && source .env && ./utility-scripts/db/start.sh",
		"db:reset": "set -a && source .env && ./utility-scripts/db/reset.sh",
		"kv:start": "set -a && source .env && ./utility-scripts/kv/start.sh",
		"kv:reset": "set -a && source .env && ./utility-scripts/kv/reset.sh"
	},
	"keywords": [],
	"dependencies": {
		"@aws-sdk/client-s3": "^3.812.0",
		"@aws-sdk/lib-storage": "^3.812.0",
		"@graphql-yoga/plugin-response-cache": "^3.15.5",
		"@nexirift/db": "^0.0.1-main.8f9f5fa102ce7cf27d2e009002ac35cc436c6051",
		"@nexirift/plugin-better-auth": "^0.0.1-main.9673a2c297ba42243b6fe4b1518006428bf914ae",
		"@pothos/core": "^4.6.2",
		"@pothos/plugin-errors": "^4.3.0",
		"@pothos/plugin-scope-auth": "^4.1.3",
		"@pothos/plugin-simple-objects": "^4.1.2",
		"@pothos/plugin-smart-subscriptions": "^4.1.2",
		"@pothos/plugin-validation": "^3.10.2",
		"@t3-oss/env-core": "^0.13.4",
		"@types/node": "^22.15.21",
		"better-auth": "^1.2.8",
		"debug": "^4.4.1",
		"drizzle-orm": "^0.43.1",
		"gradient-string": "^3.0.0",
		"graphql": "^16.11.0",
		"graphql-scalars": "^1.24.2",
		"graphql-subscriptions": "^3.0.0",
		"graphql-ws": "^6.0.5",
		"graphql-yoga": "^5.13.4",
		"mime-types": "^3.0.1",
		"redis": "^5.1.0",
		"zod": "^3.25.16"
	},
	"devDependencies": {
		"@electric-sql/pglite": "^0.3.1",
		"@eslint/js": "^9.27.0",
		"@faker-js/faker": "^9.8.0",
		"@types/bun": "latest",
		"@types/debug": "^4.1.12",
		"@types/gradient-string": "^1.1.6",
		"@types/mime-types": "^2.1.4",
		"aws-sdk-client-mock": "^4.1.0",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.27.0",
		"eslint-plugin-autofix": "^2.2.0",
		"eslint-plugin-import": "^2.31.0",
		"globals": "^16.1.0",
		"redis-memory-server": "^0.12.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1"
	}
}
