{
	"name": "nova",
	"version": "0.0.1",
	"description": "Nova, the API server for Nexirift.",
	"author": "Nexirift",
	"license": "GPL-3.0-only",
	"main": "src/server.ts",
	"scripts": {
		"dev": "NODE_ENV=development bun --watch src/server.ts",
		"start": "bun src/server.ts",
		"switch-registry": "chmod +x ./utility-scripts/switch-registry.sh && ./utility-scripts/switch-registry.sh",
		"db:generate": "cd node_modules/@nexirift/db && bun db:generate",
		"db:migrate": "set -a && source .env && cd node_modules/@nexirift/db && bun db:migrate",
		"db:studio": "set -a && source .env && cd node_modules/@nexirift/db && bun db:studio",
		"db:all": "set -a && source .env && cd node_modules/@nexirift/db && bun db:all",
		"db:start": "./utility-scripts/db/start.sh",
		"db:reset": "./utility-scripts/db/reset.sh",
		"kv:start": "./utility-scripts/kv/start.sh",
		"kv:reset": "./utility-scripts/kv/reset.sh"
	},
	"keywords": [],
	"dependencies": {
		"@aws-sdk/client-s3": "^3.787.0",
		"@aws-sdk/lib-storage": "^3.787.0",
		"@graphql-yoga/plugin-response-cache": "^3.15.5",
		"@nexirift/db": "^0.0.1-main.45d00b6961ad5de9c2cb410e200bbfbb268c85b6",
		"@nexirift/plugin-better-auth": "^1.0.1",
		"@pothos/core": "^4.6.0",
		"@pothos/plugin-errors": "^4.2.0",
		"@pothos/plugin-scope-auth": "^4.1.2",
		"@pothos/plugin-simple-objects": "^4.1.1",
		"@pothos/plugin-smart-subscriptions": "^4.1.1",
		"@pothos/plugin-validation": "^3.10.2",
		"@t3-oss/env-core": "^0.12.0",
		"@types/node": "^22.14.1",
		"better-auth": "^1.2.7",
		"debug": "^4.4.0",
		"drizzle-orm": "^0.42.0",
		"gradient-string": "^3.0.0",
		"graphql": "^16.10.0",
		"graphql-scalars": "^1.24.2",
		"graphql-subscriptions": "^3.0.0",
		"graphql-ws": "^6.0.4",
		"graphql-yoga": "^5.13.4",
		"mime-types": "^3.0.1",
		"redis": "^4.7.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@electric-sql/pglite": "^0.2.17",
		"@eslint/js": "^9.25.0",
		"@faker-js/faker": "^9.7.0",
		"@types/bun": "latest",
		"@types/debug": "^4.1.12",
		"@types/gradient-string": "^1.1.6",
		"@types/mime-types": "^2.1.4",
		"aws-sdk-client-mock": "^4.1.0",
		"drizzle-kit": "^0.31.0",
		"eslint": "^9.25.0",
		"eslint-plugin-autofix": "^2.2.0",
		"eslint-plugin-import": "^2.31.0",
		"globals": "^16.0.0",
		"redis-memory-server": "^0.12.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.30.1"
	}
}
